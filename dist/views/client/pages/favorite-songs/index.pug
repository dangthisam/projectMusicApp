extends ../../layout/default.pug
include ../../mixins/box-header.pug

block main
  .singer-detail
    .container.my-3
      .row
        .col-12
          +box-head(titlePage)

      .row
        each song in favoriteSongs
          .col-md-6.col-lg-4.mb-4
            .card.song-item.shadow-sm.border-0.rounded-3
              a.card-img-top.overflow-hidden(href=`/songs/detail/${song.infoSong.slug}`)
                img(
                  src=song.infoSong.avatar,
                  alt=song.infoSong.title,
                  style="width:100%;height:190px;object-fit:cover;border-radius:14px 14px 0 0;"
                )
                .card-body.p-3
                  h5.card-title.mb-2.fw-bold.fs-6
                    a.text-decoration-none.text-danger(href=`/songs/detail/${song.infoSong.slug}`) #{song.infoSong.title}
                  .d-flex.align-items-center.mb-1
                    i.fa-solid.fa-microphone-lines.me-2.text-primary
                    .text-muted.small.flex-grow-1 #{song.infoSinger.fullName}
                    .inner-heart.active.ms-3(button-heart=song.songId)
                      i.fa-regular.fa-heart.text-danger.me-1
                      span.small Yêu thích
                  .d-flex.align-items-center.justify-content-between.mt-1
                    span.inner-time.text-secondary.small
                      i.fa-regular.fa-clock.me-1
                      | #{song.createdAt || "20/10/2023"}
