extends ../../layout/default.pug
include ../../mixins/box-header.pug

block main
  .music-page
    .container.py-4
      .row
        .col-12
          +box-head(titlePage)
      .row.g-4.mt-3
        each song in songs
          .col-xl-4.col-lg-6.col-md-6.col-sm-12
            .song-card.position-relative.overflow-hidden
              a.song-link(href=`/songs/detail/${song.slug}`)
                .song-image-wrapper
                  img.song-image(src=song.avatar, alt=song.title)
                  .image-overlay
                    .play-btn
                      i.fas.fa-play
                .song-content
                  .song-title #{song.title}
                  .song-artist #{song.infoSinger.fullName}
                  .song-date Cập nhật ngày #{new Date(song.updatedAt).toLocaleDateString('vi-VN')}