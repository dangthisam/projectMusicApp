extends ../../layout/default.pug
include ../../mixins/alert.pug
include ../../mixins/box-header.pug

block main
  +alert(4000)
  +alertError(4000)

  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        +box-head(titlePage)

        .card.shadow.border-0.rounded-4
          .card-body.p-4.bg-white
            form(action="/user/password/otp", method="POST", autocomplete="off")
              //- Email đã nhập từ bước gửi yêu cầu (nếu muốn ẩn thì dùng hidden)
              input(type="hidden", name="email", value=email)

              .mb-3
                label.form-label(for="otp")
                  i.fa-solid.fa-lock.me-2.text-danger
                  | Mã xác minh (OTP)
                input#otp.form-control(
                 
                  name="otp",
                  required,
                  placeholder="Nhập mã OTP gồm 8 chữ số",
                  maxlength="10"
                  
                )

                small.text-muted Dãy số 6 chữ số đã gửi về email: #{email}

              .d-grid.mt-4
                button.btn.btn-success.btn-lg(type="submit")
                  i.fa-solid.fa-circle-check.me-2
                  | Xác minh mã OTP
