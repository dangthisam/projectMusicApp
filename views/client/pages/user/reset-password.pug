extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
  +alert(3000)
  +alertError(3000)

  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        .card.shadow.border-0.rounded-4
          .card-body.p-4.bg-white
            h2.text-center.mb-4
              i.fa-solid.fa-key.me-2.text-primary
              | Đặt mật khẩu mới

            form(action="/user/password/reset" method="POST" autocomplete="off")
              //- Truyền email và OTP/token qua hidden nếu cần
              input(type="hidden" name="email" value=email)
              input(type="hidden" name="otp" value=otp)

              .mb-3
                label.form-label(for="newPassword")
                  i.fa-solid.fa-lock.me-2.text-primary
                  | Mật khẩu mới
                input#newPassword.form-control(
                  type="password"
                  name="newPassword"
                  required
                  minlength="6"
                  placeholder="Nhập mật khẩu mới (ít nhất 6 ký tự)"
                )
                small.text-muted Mật khẩu nên chứa cả chữ hoa, thường, số hoặc ký tự đặc biệt.

              .mb-4
                label.form-label(for="confirmPassword")
                  i.fa-solid.fa-lock.me-2.text-success
                  | Xác nhận lại mật khẩu mới
                input#confirmPassword.form-control(
                  type="password"
                  name="confirmPassword"
                  required
                  minlength="6"
                  placeholder="Nhập lại mật khẩu mới"
                )

              .d-grid.mt-4
                button.btn.btn-success.btn-lg(type="submit")
                  i.fa-solid.fa-check.me-2
                  | Xác nhận đổi mật khẩu
