//- File Pug với các class được thêm vào
extends ../../layout/default.pug
include ../../mixins/box-header.pug

block main
  .container.my-4.music-container
    .row
      .col-12
        +box-head(titlePage)
    .row.g-4.songs-grid
      each song in songs
        .col-md-6.col-lg-4
          .song-item.shadow-sm.p-3.bg-white.rounded.h-100.modern-song-card
            .inner-image.mb-2.song-image-wrapper
              a(href=`/songs/detail/${song.slug}`)
                img.song-image(src=song.avatar, alt=song.title)
              .play-overlay
                i.fas.fa-play
            .inner-content.song-content
              .inner-title.mb-1.song-title-wrapper
                a.fw-bold.text-dark.song-title-link(href=`/songs/detail/${song.slug}`) #{song.title}
              .inner-singer.mb-1.text-muted.song-artist
                i.fa-solid.fa-microphone-lines.me-1.artist-icon
                | #{song.infoSinger.fullName}
              .d-flex.justify-content-between.align-items-center.song-stats
                .inner-like.text-secondary.stat-item.like-stat
                  i.fa-solid.fa-thumbs-up.me-1.like-icon
                  | #{song.like}
                .inner-time.text-secondary.stat-item.time-stat
                  i.fa-regular.fa-clock.me-1.time-icon
                  | Hôm nay